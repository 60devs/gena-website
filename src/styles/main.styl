@import "normalize.css"
@import "vcl-breakpoints"

html, body
  width: 100%
  height: 100%
  font-size: 16px
  font-weight: normal

.main
  height: 100%
  width: 100%
  min-height: 450px
  color: #fff
  text-align: center
  background-color: #cf4646

  &> .main-header
    padding-left: 1em
    padding-right: 1em
    position: absolute
    transform-style: preserve-3d
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)
    width: 90%

    &> .logo
      width: auto
      margin: 0 auto

  & .links
    width: auto
    float: none
    position: absolute
    position: absolute
    transform-style: preserve-3d
    top: 90%
    left: 50%
    transform: translate(-50%, -50%)
    width: 90%

    &> a
      color: white
      text-decoration: none
      padding: 0 15px
      border-right: 1px solid rgba(255,255,255,0.3)
    &> a:last-child
      border: none

.docs-btn
  transition: all 0.4s
  color: inherit
  padding: 15px 20px 16px
  vertical-align: top
  cursor: pointer
  border: 1px solid #fff
  border-radius: 3px
  text-decoration: none
  animation: fadein 2s
  text-shadow: none
  color: #333
  background-color: #fff
  font-size: 22px

.info
  padding: 2em 5em

@media (--up-to-smartphone-landscape)
  .info
    padding: 0.2em 0.5em