@import "normalize.css"
@import "vcl-breakpoints"

html, body
  width: 100%
  height: 100%
  font-size: 16px
  font-weight: normal

.main
  height: 100%
  width: 100%
  min-height: 450px
  color: #333
  text-align: center
  background-color: #8fd532
  position: relative

  &> .main-header
    padding-left: 1em
    padding-right: 1em
    position: absolute
    transform-style: preserve-3d
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)
    width: 90%

    &> .main-header-text
      font-size: 18px
      letter-spacing: 1px

    &> .logo
      width: auto
      margin: 0 auto

  & .links
    position: absolute
    bottom: 0
    left: 0
    text-align:center
    width: 100%
    bottom: 20px

    &> a
      color: #333
      text-decoration: none
      padding: 0 15px
      border-right: 1px solid rgba(0,0,0,0.3)

    &> a:last-child
      border: none

.docs-btn
  color: inherit
  padding: 15px 20px 16px
  vertical-align: top
  cursor: pointer
  border: 1px solid rgba(0,0,0,0.3)
  border-radius: 3px
  text-decoration: none
  text-shadow: none
  color: #333
  background-color: #fff
  font-size: 22px
  margin-top: 1em

.info
  padding: 2em 10em

@media (--up-to-smartphone-landscape)
  .info
    padding: 0.2em 0.5em